<main>
  <h1>Busca Hoteles y Vuelos</h1>
  <form id="travelForm">
    <label for="destination">Destino</label>
    <input type="text" id="destination" name="destination" placeholder="Ciudad o aeropuerto" required />
    
    <label for="checkin">Fecha de Entrada (Hoteles)</label>
    <input type="date" id="checkin" name="checkin" required />
    
    <label for="checkout">Fecha de Salida (Hoteles)</label>
    <input type="date" id="checkout" name="checkout" required />
    
    <label for="flightDate">Fecha de Vuelo</label>
    <input type="date" id="flightDate" name="flightDate" required />
    
    <label for="passengers">Número de Pasajeros</label>
    <select id="passengers" name="passengers" required>
      <option value="1">1 pasajero</option>
      <option value="2">2 pasajeros</option>
      <option value="3">3 pasajeros</option>
      <option value="4">4 pasajeros</option>
      <option value="5">5 pasajeros</option>
    </select>
    
    <button type="submit">Buscar</button>
  </form>

  <div class="results" id="results" aria-live="polite" style="display:none;"></div>
</main>

<script>
  const form = document.getElementById('travelForm');
  const results = document.getElementById('results');

  form.addEventListener('submit', e => {
    e.preventDefault();

    // Recoger datos del formulario
    const destination = form.destination.value.trim();
    const checkin = form.checkin.value;
    const checkout = form.checkout.value;
    const flightDate = form.flightDate.value;
    const passengers = form.passengers.value;

    // Validar fechas
    if (new Date(checkin) >= new Date(checkout)) {
      alert('La fecha de salida debe ser posterior a la fecha de entrada.');
      return;
    }
    if (new Date(flightDate) < new Date()) {
      alert('La fecha de vuelo no puede ser en el pasado.');
      return;
    }

    // Simulación de resultados (en la vida real, aquí se llamaría a una API)
    results.style.display = 'block';
    results.innerHTML = `
      <h2>Resultados para <strong>${destination}</strong>:</h2>
      <p>Hoteles disponibles del <strong>${checkin}</strong> al <strong>${checkout}</strong>.</p>
      <ul>
        <li>Hotel Blue Sky - $80 por noche</li>
        <li>Hotel Sol - $65 por noche</li>
        <li>Hotel Luna - $72 por noche</li>
      </ul>
      <p>Vuelos disponibles para <strong>${passengers} pasajero(s)</strong> el <strong>${flightDate}</strong>:</p>
      <ul>
        <li>Vuelo Directo - $120</li>
        <li>Vuelo con Escala - $95</li>
      </ul>
      <p>¡Gracias por usar TravelNest!</p>
    `;
  });
</script>
